<body>
  <section class="terminal">
    <header style="display:flex; justify-content:space-between; align-items:center;">
      <h1 style="font-size:1.1rem; margin:0;">DANTE DIAMANTE v1.5.1</h1>
      <span style="font-size:0.6rem; opacity:0.6;">CONEXIÓN: ESTABLE</span>
    </header>
    <div id="output" role="log" aria-live="polite"></div>
    <div class="controls">
      <button onclick="sys.action('STATUS')">Estado</button>
      <button onclick="sys.action('ANALYZE')">Analizar</button>
      <button onclick="sys.action('THINK')">Pensar</button>
      <button onclick="sys.action('COPY')">Copiar</button>
      <button onclick="sys.action('SYNC')" style="border-color: #008cff; color: #008cff;">Sync GitHub</button>
      <button onclick="sys.clear()" class="danger" style="color:var(--error); border-color:var(--error);">Limpiar</button>
    </div>
    <div class="status">
      <span>Kernel: DIETRIX-OS</span>
      <span id="last-op">IDLE</span>
    </div>
  </section>

  <script>
    const sys = {
      out: document.getElementById('output'),
      last: document.getElementById('last-op'),
      
      log(msg, type = 'INFO') {
        const time = new Date().toLocaleTimeString();
        const entry = `[${time}] [${type}] ${msg}\n`;
        this.out.textContent += entry;
        this.out.scrollTop = this.out.scrollHeight;
        this.last.textContent = type;
      },

      action(type) {
        this.log(`Iniciando secuencia: ${type}...`);
        setTimeout(() => {
          if(type === 'THINK') this.log("Procesando heurística avanzada...", "AI");
          if(type === 'ANALYZE') this.log("Integridad de Fantekey2026 confirmada.", "CORE");
          if(type === 'COPY') {
            navigator.clipboard.writeText(this.out.textContent);
            this.log("Datos volcados al portapapeles.", "SYS");
          }
          if(type === 'SYNC') this.log("Commit preparado para repositorio Fantekey2026.", "GIT");
        }, 500);
      },

      clear() { this.out.textContent = ""; this.log("Buffer purgado."); }
    };
    sys.log("Sistema DANTE inicializado por Cénit Dietrix.");
  </script>
</body>
