    }
    body {
      margin: 0; background: var(--bg); color: var(--accent);
      font-family: "Courier New", monospace; display: flex;
      align-items: center; justify-content: center; min-height: 100vh;
    }
    .terminal {
      width: 90%; max-width: 650px; background: var(--panel);
      border: 1px solid rgba(0,255,65,0.2); border-radius: var(--radius);
      padding: 25px; box-shadow: 0 0 40px rgba(0,255,65,0.05);
    }
    #output {
      background: #000; border-left: 4px solid var(--accent);
      padding: 15px; height: 200px; overflow-y: auto;
      font-size: 0.85rem; margin-bottom: var(--gap); border-radius: 4px;
    }
    .controls { display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 8px; }
    button {
      background: rgba(0,255,65,0.05); color: var(--accent); border: 1px solid var(--accent);
      padding: 10px; border-radius: 5px; cursor: pointer; font-weight: bold; font-size: 0.7rem;
      transition: 0.2s; text-transform: uppercase;
